<div class="modal-box">
  <h3 class="text-lg font-bold">Create department</h3>
  <form method="post" action="/departments" class="mt-4">
    <div class="w-full">
      <label for="name" class="inline-block mb-1 font-bold">Name</label>
      <input id="name" name="name" type="text" placeholder="Finance" class="w-full px-3 py-1.5 border border-zinc-200 bg-white rounded-md" required />
    </div>
    <div class="mt-4 w-full">
      <label for="address" class="inline-block mb-1 font-bold">Address</label>
      <input id="address" name="address" type="text" placeholder="12 King Street, London, UK" class="w-full px-3 py-1.5 border border-zinc-200 bg-white rounded-md" required />
    </div>
    <div class="mt-6">
      <button class="px-3 py-1.5 border border-zinc-200 bg-zinc-100 rounded-md cursor-pointer">Submit</button>
    </div>
  </form>
</div>